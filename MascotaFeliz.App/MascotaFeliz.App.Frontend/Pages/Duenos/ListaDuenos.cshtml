@page
@model MascotaFeliz.App.Frontend.Pages.ListaDuenosModel
@{
}
<body>



    <style>

 *{ padding:0;margin: 0;box-sizing:border-box; font-family: sans-serif;}
 

        body {

          background-image:
                url("https://i.pinimg.com/originals/3d/18/1d/3d181d0fa9abbca2ebdd9b22986c072a.jpg");
            color: black;
            background: #dbe2ef;

         
        }



        .table{


            color: black;

}
.h1{ color: black;}


  .btn btn-primary table-bt:hover {
   color: black;
            background: #dbe2ef;
        }



    </style>


<h1 class="h1">Listado de Propietarios</h1>
<div>
    
</div>
<table class="table">
    <tr>
        <td><h4>Cedula</h4></td>
        <td><h4>Nombres</h4></td>
        <td><h4>Apellidos</h4></td>

    </tr>

    @foreach (var dueno in Model.listaDuenos)
    {
        <tr>

            <td>@dueno.Cedula</td>
            <td>@dueno.Nombres</td>
            <td>@dueno.Apellidos</td>

            <td>
                <a class="btn btn-primary table-btn" asp-page="./DetallesDuenos" asp-route-duenoId="@dueno.Id">
                    Detalles 
                </a>
            </td>
            <td>
                <a class="btn btn-primary table-btn" asp-page="./EditarDuenos" asp-route-duenoId="@dueno.Id">
                    Editar 
                </a>
            </td>
        </tr>
    }
</table>
<a class = "btn btn-primary table-btn" asp-page="./EditarDuenos" class="btn-default">Adicionar </a>




</body>

</html>